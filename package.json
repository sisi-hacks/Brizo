{
  "name": "brizo",
  "version": "1.0.0",
  "description": "Brizo â€” Flowing Bitcoin Payments, Effortlessly",
  "main": "README.md",
  "scripts": {
    "fund:deploy": "bash scripts/brizo-stacks-deploy.sh",
    "deploy:custom": "bash scripts/brizo-stacks-deploy.sh --use-custom-key",
    "start": "./start.sh",
    "dev": "./start.sh",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "postinstall": "cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "test:contracts": "vitest run",
    "test:contracts:watch": "vitest",
    "test:contracts:coverage": "vitest run --coverage",
    "test:contracts:dev": "vitest",
    "clean": "rm -rf backend/node_modules frontend/node_modules backend/.next frontend/.next",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev"
  },
  "keywords": [
    "bitcoin",
    "stacks",
    "sbtc",
    "payments",
    "gateway",
    "donations",
    "crypto",
    "blockchain"
  ],
