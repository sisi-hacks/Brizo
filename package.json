    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/brizo.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/brizo/issues"
  },
  "homepage": "https://github.com/your-username/brizo#readme",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^2.16.0",
    "@stacks/transactions": "^7.2.0",
    "vitest": "^3.2.4"
  }
